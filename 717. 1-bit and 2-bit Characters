class Solution {
public:
    bool isOneBitCharacter(vector<int>& bits) {
        for (int i = 0; i + 1 < bits.size(); ++i)
        {
            if (!bits[i])   continue; 
            if (i + 2 < bits.size())
                ++i;
            else
                return false;
        }
        return true;
    }
};
