class Solution {
public:
    bool kLengthApart(vector<int>& nums, int k) {
        int l = -1;
        for(int i = 0; i < nums.size(); ++i)
        {            
            if (nums[i])
            {
                if (l != -1 && i - l <= k)
                {
                    return false;
                }
                l = i;
            }
        }
        return true;
    }
};
