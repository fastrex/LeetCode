class Solution {
    inline long long gauss(int n)
    {
        return n*(n + 1LL)/2;
    }
public:
    int numSub(string s) {
        long long retVal = 0;        
        int len, l = 0;
        for (int i = 0; i < s.size(); ++i)
        {
            if (s[i] == '0' || i + 1 == s.size())
            {
                len = i - l + (s[i] == '1' ? 1 : 0);               
                retVal += gauss(len);
                retVal = retVal % (long long)(1e9+7);
                l = i + 1;
            }
        }
        return retVal;
    }
};
